<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Grocery.App.Views.NewProductView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             Title="{Binding Title}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <StackLayout>
                <Label Text="Productnaam" 
                       FontAttributes="Bold" 
                       FontSize="16"/>
                <Entry Text="{Binding ProductName}" 
                       Placeholder="Voer productnaam in"/>
            </StackLayout>

            <StackLayout>
                <Label Text="Voorraad" 
                       FontAttributes="Bold" 
                       FontSize="16"/>
                <Entry Text="{Binding StockText}" 
                       Placeholder="Voer voorraad in"
                       Keyboard="Numeric"/>
            </StackLayout>

            <StackLayout>
                <Label Text="Prijs (â‚¬)" 
                       FontAttributes="Bold" 
                       FontSize="16"/>
                <Entry Text="{Binding PriceText}" 
                       Placeholder="0,00"
                       Keyboard="Numeric"/>
            </StackLayout>

            <StackLayout>
                <Label Text="Houdbaarheidsdatum" 
                       FontAttributes="Bold" 
                       FontSize="16"/>
                <DatePicker Date="{Binding ShelfLifeDate}"
                            MinimumDate="{x:Static system:DateTime.Today}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="Center" 
                         Spacing="20" 
                         Margin="0,30,0,0">

                <Button Text="Opslaan" 
                        Command="{Binding SaveProductCommand}"
                        BackgroundColor="#C49B33"
                        TextColor="White"
                        WidthRequest="120"/>

            </StackLayout>
        </StackLayout>
    </ScrollView>
    
</ContentPage>